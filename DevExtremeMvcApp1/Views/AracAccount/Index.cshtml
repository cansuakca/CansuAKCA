@model IEnumerable<DevExtremeMvcApp1.Models.Arac>

@{
    ViewBag.Title = "Araçlarım";
}

    <h2>Araçlarım</h2>

<p>
    @Html.ActionLink("Araç Kayıt", "Register")
</p>
<table class="table">
