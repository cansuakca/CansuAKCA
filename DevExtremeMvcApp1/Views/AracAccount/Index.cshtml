    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MotorTipi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plaka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuhsatSahibiAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RuhsatSahibiSoyadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.km)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicariBinek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YakitTürü)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurusTipi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bakimservisi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AracID }) |
            @Html.ActionLink("Details", "Details", new { id = item.AracID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AracID })
            @using (Html.BeginForm("BakimTalepEkrani", "BakimTalep", item, FormMethod.Post))
            {
                <input type="submit" value="Bakım Talep Et" />
            }
        </td>
    </tr>
}

</table>
