@model DevExtremeMvcApp1.Models.YetkiliServis

@{
    ViewBag.Title = "Giriş Yap";
}

    <h2>Giriş Yap</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Yetkili Servis Giriş Ekranı</h4>
        <hr />
        <div class="form-group">
            <p>Servis Kullanıcı Adı</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ServisUsername, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServisUsername, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Parola</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ServisUserPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServisUserPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
