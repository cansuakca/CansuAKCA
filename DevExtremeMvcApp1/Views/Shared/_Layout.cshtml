<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>DevExtremeMvcApp1</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script> *@

    @RenderSection("scripts", required: false)

    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")
</head>

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <a class="navbar-brand" href="/">DevExtremeMvcApp1</a>

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                @{ var userid = Session["UserID"];
                    if (userid != null)
                    {
                        <li class="active nav-item"><a href="@Url.Action("Register", "AracAccount")" class="nav-link">Araç Kayıt</a></li>
                        <li class="active nav-item"><a href="@Url.Action("Index", "AracAccount")" class="nav-link">Araçlarım</a></li>


                        <li>
                            @using (Html.BeginForm("TalepDurumList", "BakimTalep", new { TalepDurum = false }, FormMethod.Post))
                            {


                                <input type="submit" value="Bekleyen Bakım Taleplerim" />
                            }
                        </li>
                        <li>
                            @using (Html.BeginForm("TalepDurumList", "BakimTalep", new { TalepDurum = true }, FormMethod.Post))
                            {
                                <input type="submit" value="Onaylanan Bakım Taleplerim" />
                            }
                        </li>

                     


                        <li class="active nav-item"><a href="@Url.Action("LogOut", "Account")" class="nav-link">Çıkış Yap</a></li>
                    }
                    else if (Session["ServisUserID"] != null)
                    {
                        <li class="active nav-item"><a href="@Url.Action("BakimTalepList", "BakimTalep")" class="nav-link">Bakım Talebi Listesi</a></li>
                        <li class="active nav-item"><a href="@Url.Action("LogOut", "Account")" class="nav-link">Çıkış Yap</a></li>
                    }
                    else
                    {
                        <li class="active nav-item"><a href="@Url.Action("Login", "Account")" class="nav-link">Giriş</a></li>
                        <li class="active nav-item"><a href="@Url.Action("Register", "Account")" class="nav-link">Kaydol</a></li>
                    } }
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
</body>

</html>